{
  "manifest_version": 3,
  "name": "Bilibili AI Skip",
  "version": "2.3.5",
  "description": "一个使用 AI 技术自动跳过 Bilibili 视频广告的 Chrome 扩展程序。",
  "host_permissions": [
    "*://dashscope.aliyuncs.com/*",
    "*://api.cloudflare.com/*",
    "*://api.bilibili.com/*"
  ],
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.bilibili.com/video/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "homepage_url": "https://oooo.uno"
}
